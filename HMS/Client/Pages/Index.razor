@page "/"

    <div>
        <h1>
            Books
        </h1>

        @*To list the Books in the UI use a loop*@

        @if (book == null)
        {
            <text>Loading Items.....</text>
        }
        else
        {
            @foreach (var book_ in book)
            {
                <p> Title: @((MarkupString)book_.Tittle)</p>
                <p> Release Date: @((MarkupString)book_.ReleaseDate.ToString("dd MMM yyyy"))  </p>
            }
        }

    </div>

@code
{
    /// <summary>
    /// create a list of books
    /// </summary>

    List<Books> book;

    

    protected async  override Task OnInitializedAsync()
    {
        await Task.Delay(10000);
        book = new List<Books>()
        {
            new Books()
             {
                Tittle = "<b>Harry Potter</b>",
                ReleaseDate = new DateTime(2008, 9, 8)
            },
             new Books()
             {
                Tittle = "<i>Django</i>",
                ReleaseDate = new DateTime(2009, 7, 8)
            },
              new Books()
             {
                Tittle = "40 Laws of Power",
                ReleaseDate = new DateTime(2018, 4, 8)
            }
        };
    }

    
    
}